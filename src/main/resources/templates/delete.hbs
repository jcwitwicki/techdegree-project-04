{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Are you sure you want to delete the entry "{{blogEntry.title}}"?</h2>
                <form action="/delete/{{blogEntry.slug}}" method="post">
                    <input type="submit" value="Yes, I am" class="button">
                    <a href="/" class="button button-secondary">No, I changed my mind</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

